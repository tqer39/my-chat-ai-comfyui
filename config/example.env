# ComfyUI Configuration
COMFYUI_HOST=localhost
COMFYUI_PORT=8188
COMFYUI_API_ENDPOINT=http://localhost:8188

# Chat AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
DISCORD_BOT_TOKEN=your_discord_token_here
SLACK_BOT_TOKEN=your_slack_token_here

# NSFW Filtering Configuration
NSFW_DETECTION_ENABLED=true
NSFW_CONFIDENCE_THRESHOLD=0.7
NSFW_CENSORING_METHOD=blur

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Configuration
DATABASE_URL=sqlite:///chat_ai_comfyui.db

# Security Configuration
SECRET_KEY=your_secret_key_here
API_KEY=your_api_key_here

# Performance Configuration
MAX_CONCURRENT_GENERATIONS=3
GENERATION_TIMEOUT=300
QUEUE_CHECK_INTERVAL=2

# Model Configuration
DEFAULT_MODEL=v1-5-pruned-emaonly.ckpt
DEFAULT_STEPS=20
DEFAULT_CFG=7.0
DEFAULT_SAMPLER=euler

# Image Configuration
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
OUTPUT_FORMAT=png
QUALITY=95

# Chat Platform Configuration
ENABLE_DISCORD=false
ENABLE_SLACK=false
ENABLE_WEB_INTERFACE=true
WEB_INTERFACE_PORT=8080

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
